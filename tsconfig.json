{
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "public/plugins/keditor.js"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowJs": true,
        "verbatimModuleSyntax": true, // 추가된 옵션
        "ignoreDeprecations": "5.0"
    },
    "references": [
        {
            "path": "./tsconfig.vite-config.json"
        }
    ]
}
